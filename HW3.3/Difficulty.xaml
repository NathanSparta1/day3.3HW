        </Grid.Background>
        <Button x:Name="btnEasy" HorizontalAlignment="Left" Margin="201,211,0,0" VerticalAlignment="Top" Width="112" Height="46" Content="Easy"/>
        <Button x:Name="btnMedium" Content="Medium" HorizontalAlignment="Left" Margin="349,211,0,0" VerticalAlignment="Top" Width="112" Height="46"/>
        <Button x:Name="btnHard" Content="Hard" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Height="46" RenderTransformOrigin="2.652,0.757" Margin="501,211,0,0"/>
        <Button x:Name="btnBack" HorizontalAlignment="Left" Margin="33,43,0,0" VerticalAlignment="Top" Width="112" Height="46" Content="Back"/>

    </Grid>
</Window>
